import OpenAI from "openai";
import { OpenAIStreamAdapter, StreamingTextResponse } from "../utils/stream-adapter";

const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY!,
});

export async function consultRehabExpert(req: Request) {
  try {
    const { messages } = await req.json();
    
    const response = await openai.chat.completions.create({
      model: "gpt-4-turbo-preview",
      stream: true,
      messages: [
        {
          role: "system",
          content: `أنت خبير متخصص في إعادة التأهيل الطبي. قدم نصائح مهنية ومفصلة باللغة العربية.
          
          تخصصاتك تشمل:
          - العلاج الطبيعي
          - العلاج الوظيفي  
          - علاج النطق واللغة
          - إعادة التأهيل العصبي
          - إعادة التأهيل الحركي
          
          قدم إجابات:
          - علمية ودقيقة
          - مبنية على الأدلة والبراهين
          - مناسبة لمستوى فهم المريض
          - تتضمن تمارين عملية عند الحاجة
          - تحذيرات للحالات التي تحتاج مراجعة طبية`
        },
        ...messages
      ],
      temperature: 0.7,
      max_tokens: 2000,
    });
    
    const stream = OpenAIStreamAdapter(response);
    return new StreamingTextResponse(stream);
  } catch (error) {
    console.error('Consult rehab expert error:', error);
    return new Response('حدث خطأ في معالجة طلبك', { status: 500 });
  }
}
