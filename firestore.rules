rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the incoming data's userId matches the authenticated user's uid.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Rules for the 'users' collection.
    match /users/{userId} {
      // Allow users to read and update their own user document.
      // Allow creation of a user document only if the user is the owner.
      allow read, update: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }
    
    // Rules for the 'reports' collection.
    match /reports/{reportId} {
      // Allow users to get a report only if they are the owner.
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow users to list (query) their own reports.
      allow list: if isSignedIn() && request.query.where.body.children[0].children[2] == request.auth.uid;

      // Allow users to create a report only if they are the owner of the data.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Allow users to update a report only if they are the owner.
      allow update: if isSignedIn() && isOwner(resource.data.userId);

      // Disallow deletion of reports to maintain history.
      allow delete: if false;
    }
  }
}
