rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/update their own profile.
    // They can create their own 'reports' subcollection.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;

      // Reports are now stored in a subcollection under the user's document.
      // This is a more secure and robust pattern.
      match /reports/{reportId} {
        allow read, update, delete: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId;
      }
    }
    
    // The global 'reports' collection is no longer used.
    // This rule is left here to explicitly deny access if old code tries to use it.
    match /reports/{reportId} {
      allow read, write: if false;
    }
  }
}
