rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // 1. A user can create their own user document.
    // 2. A user can only read and update their own document.
    // 3. No one can delete a user document.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Reports Collection
    // 1. A user can create a report if the userId in the document matches their own UID.
    // 2. A user can only read, update, or delete reports that they own (userId matches).
    match /reports/{reportId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
